{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/poster.css') }}">
    <script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}

{% block body %}

    <section class="container">
        <h1>Postez votre annonce:</h1>
    </section>

    {% for flashMessage in app.session.flashbag.get('info') %}
        <div class="alert alert-success">
            {{ flashMessage }}
        </div>
    {% endfor %}

    <section class="container-fluid">
        <div class="row">
            {{ form_start(form) }}
            {{ form_errors(form) }}
            <article class="col-md-3 well gauche">
                <legend>Chat:</legend>
                <div class="form-group description">
                    <label for="nom">Description:<strong>*</strong></label>
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Minimum 10 caractères'}})}}
                    {{ form_errors(form.description) }}
                    <p id="messDescription">Au moins 10 caractères et pas de chiffres.</p>
                </div>
                <div class="form-group">
                    <label for="picture">Image</label>
                    {{ form_widget(form.imageUrl)}}
                    {{ form_errors(form.imageUrl)}}
                </div>
                <div class="form-group">
                    <label for="nom">Sexe:</label>
                    {{ form_widget(form.sexe, {'attr': {'class': 'form-control', 'placeholder': 'Sexe'}})}}
                    {{ form_errors(form.sexe) }}
                </div>
                <div class="form-group">
                    <label for="nom">Race:</label>
                    {{ form_widget(form.race, {'attr': {'class': 'form-control', 'placeholder': 'Race'}})}}
                    {{ form_errors(form.race) }}
                </div>
                <div class="form-group tatouage">
                    <label for="nom">Tatouage:</label>
                    {{ form_widget(form.tatouage, {'attr': {'class': 'form-control', 'placeholder': '129ZEP', 'maxlength':'6'}})}}
                    {{ form_errors(form.tatouage) }}
                    <p id="messTatouage">Format 129ZEP ou ZEP129</p>
                </div>
                <div class="form-group identification">
                    <label for="nom">Identification:</label>
                    {{ form_widget(form.identification, {'attr': {'class': 'form-control', 'placeholder': '250269811205512',  'maxlength':'15'}})}}
                    {{ form_errors(form.identification) }}
                    <p id="messIdentification">15 chiffres - Pas de lettres - Pas de caractères spéciaux.</p>
                </div>

                <div class="form-group">
                    <label for="nom">Stérilisation:</label>
                    {{ form_widget(form.sterilisation, {'attr': {'class': 'form-control', 'placeholder': 'Stérilisation'}})}}
                    {{ form_errors(form.sterilisation) }}
                </div>
            </article>
            <article class="col-md-3 col-md-offset-1 well">
                <legend>Détails:</legend>
                <div class="form-group signes">
                    <label for="nom">Signes:<strong>*</strong></label>
                    {{ form_widget(form.signes, {'attr': {'class': 'form-control', 'placeholder': 'Minimum 10 caractères', 'cols': '30', 'rows':'10'}})}}
                    {{ form_errors(form.signes) }}
                    <p id="messSignes">Les signes doivent faire au moins 10 caractères.</p>
                </div>
                <div class="form-group circonstances">
                    <label for="nom">Circonstances:<strong>*</strong></label>
                    {{ form_widget(form.circonstances, {'attr': {'class': 'form-control', 'placeholder': 'Minimum 10 caractères', 'cols': '30', 'rows':'10'}})}}
                    {{ form_errors(form.circonstances) }}
                    <p id="messCirconstances">Les circonstances doivent faire au moins 10 caractères.</p>
                </div>
            </article>
            <article class="col-md-3 col-md-offset-1 well">
                <legend>Pour vous joindre:</legend>
                <div class="form-group email">
                    <label for="nom">Email:<strong>*</strong></label>
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control', 'placeholder': 'Email', 'cols': '30', 'rows':'10'}})}}
                    {{ form_errors(form.mail) }}
                    <p id="messMail">Email n'est valide.</p>
                </div>
                <div class="form-group mobile">
                    <label for="nom">Mobile:<strong>*</strong></label>
                    {{ form_widget(form.mobile, {'attr': {'class': 'form-control', 'placeholder': 'Mobile', 'maxlength':'10'}})}}
                    {{ form_errors(form.mobile) }}
                    <p id="messMobile">10 chiffres - Débute par 06 ou 07</p>
                </div>
                <div class="form-group">
                    <label for="nom">Département:</label>
                    {{ form_widget(form.departement, {'attr': {'class': 'form-control', 'placeholder': 'Département'}})}}
                    {{ form_errors(form.departement) }}
                </div>

                <div class="form-group">
                    <label for="nom">Categorie:</label>
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control', 'placeholder': 'Catégorie'}})}}
                    {{ form_errors(form.categorie) }}
                </div>
                <div class="g-recaptcha" data-sitekey="6LeGqiUTAAAAAFZwqmDPRoHCAgsy8OPyG47BCi5A"></div>
                <br>
                <div id="requis"><p><strong>*</strong> Champs requis.</p></div>
            </article>
        </div>
        <div class="container">
            <div class="form-group">
                {{ form_widget(form.Envoyer, {'attr': {'class': 'btn btn-warning form-control'}})}}
            </div>
            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/poster.js') }}"></script>
{% endblock %}
