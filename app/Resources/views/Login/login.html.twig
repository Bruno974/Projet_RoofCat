{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}


{% block body %}

    <div class="container">

        <h2 class="text-center">Connexion</h2>

        {% if error %}
            <div class="alert alert-danger">
                <strong>{{ error.message }}</strong>
            </div>
        {% endif %}

        <div class="well">

            <form class="form-signin form-horizontal" role="form" action="{{ path('login_check') }}" method="post">

                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                        <label for="username">Login:</label>
                        <input type="text" name="_username" value="{{ last_username }}" class="form-control"  required autofocus>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                        <label for="password">Mot de passe:</label>
                        <input type="password" name="_password" class="form-control"  required>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
                        <button type="submit" class="btn btn-default btn-primary"><span class="glyphicon glyphicon-log-in"></span> Login</button>
                    </div>
                </div>

            </form>

        </div>
        <hr>
    </div>

{% endblock %}
