<div class="container">
    <div class=" row well">
        <h4 class="text-center "> {{ annonce.date|date('d/m/Y') }}</h4>
        <div class="col-lg-5">
            <p><small> {{ annonce.departement.departementNom }}</small></p>
            <img src="{{ asset(annonce.imageUrl)}}" alt="{{annonce.description}}" class="img-responsive img-thumbnail center">
            <p class="text-center annonce"><strong>ANNONCE:</strong><small> {{ annonce.id }}</small></p>
        </div>
        <div class="col-lg-7 well">
            <legend>Chat:</legend>
            <p><strong>Description:</strong><small> {{ annonce.description }}</small></p>
            <p><strong>sexe:</strong><small> {{ annonce.sexe }}</small></p>
            <p><strong>race:</strong><small> {{ annonce.race.nom }}</small></p>
            {% if  annonce.tatouage == null %}
                <p><strong>tatouage:</strong><small> non</small></p>
            {% else %}
                <p><strong>tatouage:</strong><small> {{ annonce.tatouage }}</small></p>
            {% endif %}

            {% if  annonce.identification == null %}
                <p><strong>identification:</strong><small> non</small></p>
            {% else %}
                <p><strong>identification:</strong><small> {{ annonce.identification }}</small></p>
            {% endif %}
            <p><strong>STERILISATION:</strong><small> {{ annonce.sterilisation }}</small></p>

            <legend>DÃ©tails:</legend>
            <p><strong>SIGNES:</strong><small> {{ annonce.signes }}</small></p>
            <p><strong>CIRCONSTANCES:</strong><small> {{ annonce.circonstances }}</small></p>

            <legend>Contact:</legend>
            <p><strong>E-MAIL:</strong><small> {{ annonce.mail }}</small></p>
            <p><strong>MOBILE:</strong><small> {{ annonce.mobile }}</small></p>
        </div>
    </div>
    <hr>
</div>
